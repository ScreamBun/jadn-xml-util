<?xml version="1.0" encoding="UTF-8"?>
<rules:Rules xmlns:rules="http://example.org/rules"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://example.org/rules rules.xsd">

    <Rule uuid="64738ff5-5367-5958-9aee-98fffdcd1871" name="TirePressureRule">
        <title>TirePressureRule</title>
        <tests>
            <Test testID="64738ff5-5367-5958-9aee-98fffdcd1872" testName="urn:niftydemo:test:SC13-pressure">
                <measurement measurementID="64738ff5-5367-5958-9aee-98fffdcd1873" measurementName="urn:niftydemo:test:measurement:SC13-pressure"></measurement> 
                <Criteria criteriaID="78253944-9902-4eff-a15d-b9e2147f6edf" criteriaName="urn:niftydemo:test:criteria:TP">
                    <criteriaValues>
                        <CriteriaValue>
                            <valueName>TirePressure</valueName>
                            <evalItem>
                                <valueRange>
                                    <min>31</min>
                                    <max>51</max>
                                </valueRange>
                            </evalItem>
                        </CriteriaValue>
                    </criteriaValues>   
                </Criteria>   
            </Test>
            <Test testID="64738ff5-5367-5958-9aee-98fffdcd1874" testName="urn:niftydemo:test:SC13-temp">
                <measurement measurementID="64738ff5-5367-5958-9aee-98fffdcd1873" measurementName="urn:niftydemo:test:measurement:SC13-temp"></measurement> 
                <Criteria criteriaID="37d67b00-d628-45ca-b19e-24c7ecabf5d2" criteriaName="urn:niftydemo:test:criteria:Temp">
                    <criteriaValues>
                        <CriteriaValue>
                            <valueName>TireTempCriteria</valueName>
                            <evalItem>
                                <valueRange>
                                    <min>-15</min>
                                    <max>120</max>
                                </valueRange>
                            </evalItem>
                        </CriteriaValue>
                    </criteriaValues>   
                </Criteria>   
            </Test>            
        </tests>
        <logic_statement>
            <LogicalComponent><test>urn:niftydemo:test:SC13-pressure</test></LogicalComponent>
            <LogicalComponent><booleanLogicalOperator>AND</booleanLogicalOperator></LogicalComponent>
            <LogicalComponent><test>urn:niftydemo:test:SC13-temp</test></LogicalComponent>
        </logic_statement>
    </Rule>

</rules:Rules>