    <Criteria criteriaID="055634e0-3b88-4d45-b091-948378cf3ae3" criteriaName="FirewallSchemesAllowedCriteria">
        <description>Firewall Schemes Allowed Criteria</description>
        <criteriaValues>
            <CriteriaValue>
                <valueName>allowedSchemes</valueName>
                <evalItem>
                    <allowedStrings>
                        <AllowedItem>https</AllowedItem>
                        <AllowedItem>sftp</AllowedItem>
                    </allowedStrings>
                </evalItem>
            </CriteriaValue>           
        </criteriaValues>
    </Criteria>   

